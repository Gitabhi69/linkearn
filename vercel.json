{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api"
    },
    {
      "source": "/(.*)",
      "destination": "/public/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "api/index.js": {
      // The 'use' property was removed as it caused a schema validation error.
      // Vercel will now infer the Node.js runtime from your package.json or project settings.
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}
